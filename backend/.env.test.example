# Test Environment Configuration
# Copy this file to .env.test and configure for your test environment

# MongoDB Test Database
# Use a separate database for tests to avoid affecting development data
# Auth credentials should match docker-compose.yml settings
MONGODB_URI=mongodb://admin:changeme@localhost:27017/personalfit-test?authSource=admin

# JWT Configuration (can use same as development)
JWT_SECRET=your-test-jwt-secret-key

# MinIO Test Configuration (optional for correlation tests)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=personalfit-test

# API Keys (optional for correlation tests, required for AI/OCR tests)
OPENAI_API_KEY=your-test-openai-api-key
ANTHROPIC_API_KEY=your-test-anthropic-api-key

# Server Configuration
PORT=5001
NODE_ENV=test
